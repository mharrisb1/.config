// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "base_keymap": "VSCode",
  "theme": "Fleet Dark",
  "features": {
    "copilot": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 12,
  "current_line_highlight": "gutter",
  "format_on_save": "on",
  "languages": {
    "JSON": {
      "tab_size": 2
    },
    "Vue.js": {
      "tab_size": 2,
      "formatter": "auto"
    },
    "TypeScript": {
      "tab_size": 2
    }
  },
  "language_overrides": {
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "eslint",
          "arguments": ["--stdin-filepath", "{buffer_path}", "--fix"]
        }
      }
    },
    "Vue.js": {
      "format_on_save": {
        "external": {
          "command": "eslint",
          "arguments": ["--stdin-filepath", "{buffer_path}", "--fix"]
        }
      }
    }
  }
}
